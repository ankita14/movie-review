<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<section class="title">
	<div class="container">
		<div class="row-fluid">
			<div class="span6">
				<h1>Latest Movies</h1>
			</div>
			<div class="span6">
				<ul class="breadcrumb pull-right">
					<li><a href="index.html">Home</a> <span class="divider">/</span></li>
					<li><a href="#">Movies</a> <span class="divider">/</span></li>
					<li class="active">Latest Movies</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<section id="portfolio" class="container main">    
		<ul class="gallery col-4">
			<% @latest.each do |movie| %>
				<% @average_cr_rating = 0.0 %>

					<% if movie.critics_ratings.count > 0 %>
						<% critics_count = movie.critics_ratings.count %>
						<% cr_rating = 0 %>
						<% movie.critics_ratings.each do |cr| %>
							<% cr_rating = cr_rating + cr.rating %>
						<%  end %>

						<% @average_cr_rating = cr_rating/critics_count %>
					<% end %> 

					<script type="text/javascript">
						$(function(){
							$.getScript( "https://cdnjs.cloudflare.com/ajax/libs/raty/2.7.0/jquery.raty.min.js", function( data, textStatus, jqxhr ) {
									$('.movie_rating-<%= movie.id %>').raty({ score: <%= @average_cr_rating %>,
							  	readOnly: true,
						    	path: '/assets'
								});
							})
						})
					</script>

				<li>
					<div class="preview">
						
						<% if movie.image.present? %>
						
							<%= link_to( image_tag(movie.image.indexThumb.url), movie_with_title_path(movie)) %>
						<% else %>
							<%= link_to( image_tag("/assets/not_available.jpg"), movie_with_title_path(movie)) %>
						<% end %>


					</div>

					<div class="desc">
						<h5><%= link_to movie.title, movie_with_title_path(movie), :class => "mov_link" %></h5>
						<small class="movie_rating-<%= movie.id %>">
							<!-- <h2 class="movie_rating-<%= movie.id %>" > -->
							<p class="pull-right indent"><% if movie.release_date %>
								<i class="icon-calendar"></i> <%= movie.release_date.strftime("%b %dth, %Y") %>
							<% end %></p>
						</small>
					</div>                
				</li>
				<!--/Item 1--> 

			<% end %>

		</ul>
		
	</section>

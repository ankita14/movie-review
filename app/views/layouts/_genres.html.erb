
<div class="widget">
	<h3>Browse by Genres</h3>
	<div>
		<div class="row-fluid">
			<% @total_genre = @genres.count/2.0 %>
			<% @span1 = @total_genre.ceil %>
			<% @span2 = @total_genre.floor %>
			<% @span1_genre = @genres.first(@span1) %>
			<% @span2_genre = @genres.last(@span2) %>

				<div class="span6">
						<ul class="unstyled">
							<% @span1_genre.each do |genre| %>
								<% if genre.movies.count > 0 %>
									<li><%= link_to genre.title, genre_with_title_path(genre) %> (<%= genre.movies.count %>)</li>
								<% end %>
							<% end %>
						</ul>
				</div>

				<div class="span6">
						<ul class="unstyled">
							<% @span2_genre.each do |genre| %>
								<% if genre.movies.count > 0 %>
									<li><%= link_to genre.title, genre_with_title_path(genre) %> (<%= genre.movies.count %>)</li>
								<% end %>                 
							<% end %>
						</ul>
				</div>			
		</div>
	</div>                       
</div>
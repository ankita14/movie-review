<section id="about-us" class="container main">
	<div class="row-fluid">
	  <div class="span4"></div>
		<div class="span4">
			<div class="blog">
				<div class="blog-item well">
					<div class="blog-meta clearfix">
						<p class="pull-left">
						<h2>Sign In</h2>
							<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
									<div class="field">
										<p><%= f.label :login %><br />
										<%= f.text_field :login, :required => true, :placeholder => "Username or Email Id" %></p>
									</div>

									<div class="field">
										<%= f.label :password %><br />
										<%= f.password_field :password, :required => true, autocomplete: "off", :placeholder => "Password" %>
									</div>

									<% if devise_mapping.rememberable? -%>
										<div class="field">
											<%= f.check_box :remember_me %>
											<%= f.label :remember_me %>
										</div>
									<% end -%>

									<div class="actions">
										<%= f.submit "Log in", :class => 'btn btn-primary btn-large' %>
									</div>
								<% end %>
								
								<%= render "devise/shared/links" %>
						</p>

						<br/>
												
					</div>              
				</div>
			</div>
		</div>
		  <div class="span4"></div>
	</div>
</section>



<p id="notice"><%= notice %></p>

<h1>Listing Featured Trailors</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_trailors.each do |featured_trailor| %>
      <tr>
        <td><%= featured_trailor.movie_id %></td>
        <td><%= featured_trailor.position %></td>
        <td><%= link_to 'Show', featured_trailor %></td>
        <td><%= link_to 'Edit', edit_featured_trailor_path(featured_trailor) %></td>
        <td><%= link_to 'Destroy', featured_trailor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

